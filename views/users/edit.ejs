<%- include('../partials/header'); -%>
<div class="container">
  <div class="row justify-content-center">
    <!-- JUMBOTRON -->
    <header class="h-100 p-5 bg-light border rounded-3">
      <h1 style="text-align: center"><b>Edit User : </b><%=user.name%></h1>
    </header>

    <!-- FORM -->
    <div style="width: 30%; margin: 25px auto">
      <form action="/users/<%=user._id%>?_method=PUT" method="POST">
        <div class="input-group mb-3">
          <input
            class="form-control"
            type="text"
            name="user[name]"
            placeholder="name"
            value="<%=user.name%>"
            disabled
          />
        </div>
        <div class="input-group mb-3">
          <input
            class="form-control"
            type="text"
            name="user[username]"
            placeholder="username"
            value="<%=user.username%>"
            disabled
          />
        </div>
        <div class="input-group mb-3">
          <input
            class="form-control"
            type="text"
            name="user[branch]"
            placeholder="branch"
            value="<%=user.branch%>"
            disabled
          />
        </div>
        <div class="input-group mb-3">
          <input
            class="form-control"
            type="text"
            name="user[cgpa]"
            placeholder="cgpa"
            value="<%=user.cgpa%>"
            disabled
          />
        </div>
        <div class="input-group mb-3">
          <input
            class="form-control"
            type="text"
            name="personal_email"
            placeholder="personal_email"
            value="<%=user.personal_email%>"
          />
        </div>
        <div class="input-group mb-3">
          <input
            class="form-control"
            type="text"
            name="mobile_number"
            placeholder="mobile_number"
            value="<%=user.mobile_number%>"
          />
        </div>
        <div class="input-group mb-3">
          <input
            class="form-control"
            type="text"
            name="resume_link"
            placeholder="resume_link"
            value="<%=user.resume_link%>"
          />
        </div>
        <div class="input-group mb-3">
          <input
            class="form-control"
            type="text"
            name="documents_link"
            placeholder="documents_link"
            value="<%=user.documents_link%>"
          />
        </div>
        <div class="form-group">
          <div class="d-grid gap-2">
            <button class="btn btn-primary" type="submit">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer'); -%>
