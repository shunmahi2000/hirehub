<%- include('../partials/header'); -%>
<div class = "container">
	<div class="row justify-content-center">
		<!-- JUMBOTRON -->
		<header class="h-100 p-5 bg-light border rounded-3">
		<h1 style="text-align: center;">edit job <%=job.name%></h1>
		</header>
		
		<!-- FORM -->
		<div style="width: 30%; margin: 25px auto;">
			<form action="/jobs/<%=job._id%>?_method=PUT" method="POST">
				<div class="input-group mb-3">
					<input class="form-control" type="text" name="job[name]" value="<%=job.name%>">
				</div>
				<div class="input-group mb-3">
					<input class="form-control" type="text" name="job[eligibility]" value="<%=job.eligibility%>">
				</div>
				<div class="input-group mb-3">
					<input class="form-control" type="text" name="job[description]" value="<%=job.description%>">
				</div>
				<div class="input-group mb-3">
					<input class="form-control" type="text" name="job[logo]" value="<%=job.logo%>">
				</div>
				<div class="input-group mb-3">
					<input class="form-control" type="number" name="job[stipend]" value="<%=job.stipend%>">
				</div>
				<div class="form-group">
					<div class="d-grid gap-2">
					  <button class="btn btn-primary" type="submit">Submit</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
<%- include('../partials/footer'); -%>