<%- include('../partials/header'); -%>

<div class="container register-container text-center">
    
    <div class="row">
        
        <div class="col-6">
            <h1 class="text-center">New Job Form</h1>
    <br>
            <form class=" register-bg text-center"action="/jobs" method="POST">
                <br>
                
                  <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
						<input class="form-control" type="text" name="job[name]" placeholder="name">
                    </div>
                  </div>
                  <br>
				  <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Eligibility</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" name="job[eligibility]" placeholder="eligibility">
                    </div>
                  </div>
                 <br>
                  <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-10">
						<input class="form-control" type="text" name="job[description]" placeholder="Description">
                    </div>
                  </div>
                  <br>
                  <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Logo Url</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" name="job[logo]" placeholder="logo url">
                        </div>
                  </div>
                  <br>
                  <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Stipend</label>
                    <div class="col-sm-10">
						<input class="form-control" type="number" name="job[stipend]" placeholder="stipend">
                    </div>
                  </div>
                  
				  <br>
				  <button class="text-center btn btn-lg btn-primary" type="submit">Submit</button>
				  <br>
            </form>
           
        </div>
		<div class="col-6">
            <img class="register-img"src="https://cdn-icons.flaticon.com/png/512/2936/premium/2936736.png?token=exp=1641729995~hmac=8de78affd388159eba67c86610b93553" alt="">
        </div>
    </div>
    
    <div class="form-signin">
        <a href='/jobs'>
            <button class="Dark">
               Go Back
            </button>
        </a>
    </div>
</div>
<%- include('../partials/footer'); -%>
