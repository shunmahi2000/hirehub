<%- include('../partials/header'); -%>
<div class = "container">
	<div class="row justify-content-center">
		<!-- JUMBOTRON -->
		<header class="h-100 p-5 bg-light border rounded-3">
		<h1 style="text-align: center;">edit question <%=question.description%></h1>
		</header>
		
		<!-- FORM -->
		<div style="width: 30%; margin: 25px auto;">
			<form action="/job/<%=jobId%>/questions/<%=question._id%>?_method=PUT" method="POST">
				<div class="input-group mb-3">
					<input class="form-control" type="text" name="question[description]" value="<%=question.description%>">
				</div>
				<div class="input-group mb-3">
					<input class="form-control" type="text" name="question[option1]" value="<%=question.option1%>">
				</div>
				<div class="input-group mb-3">
					<input class="form-control" type="text" name="question[option2]" value="<%=question.option2%>">
				</div>
				<div class="input-group mb-3">
					<input class="form-control" type="text" name="question[option3]" value="<%=question.option3%>">
				</div>
				<div class="input-group mb-3">
					<input class="form-control" type="text" name="question[option4]" value="<%=question.option4%>">
				</div>
				<div class="input-group mb-3">
					<input class="form-control" type="text" name="question[correctAns]" value="<%=question.correctAns%>">
				</div>
				<div class="form-group">
					<div class="d-grid gap-2">
					  <button class="btn btn-primary" type="submit">Submit</button>
					</div>
				</div>
			</form>
			<a href ="/jobs">Go back</a>
		</div>
	</div>
</div>
<%- include('../partials/footer'); -%>