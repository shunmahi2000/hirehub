<%- include('../partials/header'); -%>

<div class="container">
	<header class="h-100 p-5 bg-light border rounded-3 mb-4">
		<div class="container">
			<h1><i class="fas fa-bell"></i> Welcome to HireHub !</h1>
			<p>The ultimate solution to all your placement problems</p>
			<% if(currentUser && currentUser.admin){ %>
				<p><a class="btn btn-primary btn-large" href="/notifications/new">Add new Notification</a>	</p>
			<% } %>
		</div>
	</header>
  
	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<% for ( var i=0; i<notifications.length; i++){ %>
			<div class=" mb-4">
				<div class="card">
					<div class="card-body">
						<div class="card-text d-flex flex-row justify-content-between">
							<div><%=notifications[i].description%></div>
							<div class=""><% if(currentUser && currentUser.admin){ %>
							<form action="/notifications/<%=notifications[i]._id%>?_method=DELETE" method="POST">
								<button class="btn btn-primary">Delete</button>
							</form>
						<% } %></div>
					</div>
						<p class="card-text"><b>Posted by: - <%=notifications[i].author%></b> </p>
						
					</div>
				</div>
			</div>
			<br>
		<% } %>
	</div>  
	<a href="/home" class="btn btn-primary">Go Back</a>
</div>

<%- include('../partials/footer'); -%>


